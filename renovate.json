{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "ignoreDeps": [
    "net.fabricmc.fabric-api:fabric-api",
    "fabric-loom",
    "eu.pb4:placeholder-api",
    "eu.pb4:polymer-autohost",
    "eu.pb4:polymer-resource-pack",
    "com.mojang:minecraft"
  ],
  "baseBranches": [
    "dev"
  ],
  "packageRules": [
    {
      "matchDepNames": [
        "net.momirealms:craft-engine-core",
        "net.momirealms:craft-engine-bukkit"
      ],
      "versioning": "semver",
      "allowedVersions": "/^(?<major>\\\\d+)(?:\\\\.(?<minor>\\\\d+)(?:\\\\.(?<patch>\\\\d+))?)?$/"
    }
  ]
}
